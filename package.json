{
  "name": "wiserunner",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@fontsource/roboto": "^4.5.5",
    "@mui/icons-material": "^5.6.1",
    "@mui/material": "^5.6.1",
    "@mui/styles": "^5.6.1",
    "@reduxjs/toolkit": "^1.8.1",
    "@ronomon/opened": "^1.5.2",
    "array-move": "^4.0.0",
    "electron-is-dev": "^1.2.0",
    "event-stream": "^4.0.1",
    "nexline": "^1.2.2",
    "react": "^18.0.0",
    "react-beautiful-dnd": "^13.1.0",
    "react-custom-scrollbars-2": "^4.4.0",
    "react-dom": "^18.0.0",
    "react-redux": "^8.0.1",
    "react-scripts": "^5.0.1",
    "react-window": "^1.8.7",
    "reselect": "^4.1.5",
    "stormdb": "^0.5.2",
    "yargs": "^17.4.1"
  },
  "main": "main.js",
  "homepage": ".",
  "author": {
    "name": "Igor Aleschenkov"
  },
  "build": {
    "portable": {
      "splashImage": "splash.bmp"
    },
    "win": {
      "target": "portable"
    },
    "extends": null,
    "appId": "com.worldwide.wiserunner",
    "productName": "WISERunner",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "./*.js",
      "./build/**/*",
      "./node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "electron": "^18.0.4",
    "electron-builder": "^22.5.1",
    "electron-rebuild": "^3.2.7",
    "nodemon": "^2.0.4",
    "wait-on": "^5.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron . \"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm run build",
    "electron-pack": "electron-builder -w portable",
    "rebuild": "electron-rebuild -f -w @ronomon/opened"
  }
}
